// Page subscription 
.page-subscriptions {
    background-color: white;
}
.subscription {
    margin: 60px auto;
    max-width: 1440px;
    .container-subscription {
      display: flex;
      justify-content: space-between;
      .content-left {
          width: 48%;
      }
      .content-right {
          width: 48%;
          .page__title {
            &:after {
              display: none;
            }
          }
          p {
            text-align: left;
          }
        
          h1 {
              font-size: 2.75rem;
              color: black;
              margin-bottom: 50px;
          }

          .subscription-step__line {
              display: none;
          }
          
          .d-grid {
              display:flex;
          }
          .subscription-step__item {
              border: 1px solid black;
              padding: 10px 0 10px 0;
              margin: 30px 0;
              min-width: 150px;
              text-align: center;
              line-height: normal;
              &.selected {
                background: #f2f2f2;
              }

              &:first-child {
                  border-right: 0;
              }
          }

          .subscription__desc {
              max-width: 80%;
          }

          .subscription-step__header {
              font-size: 22px;
          }

          .subscription__action {
              display: flex;
              justify-content: space-between;
              max-width: 70%;
              margin-top: 50px;
              .product #content .product-wrap {
                  padding: 0;
              }
          }
      }
    }
}
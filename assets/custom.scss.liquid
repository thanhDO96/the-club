header #navigation-bar .branding a img {max-width: 120px;}

header #navigation-bar .navigation nav>ul {
  display:-webkit-flex;
  display:flex;
  align-items:center;
  
  li.search-nav {

    .search-label {
      position:relative;
      min-height:18px;
      min-width:100px;
    }

    .search-label span {
      display:block;
      cursor:pointer;
    }

    form {
      position: absolute;
      left: 0;
      top: 50%;
      -webkit-transform: translateY(-50%);
      transform: translateY(-50%);
      min-width: 0;
      width:0;
      opacity:0;
      transition:all 0.2s linear 0s;
    }
  }
  
  li.search-nav.active-search {
    span {display:none;}
    form {
      min-width:180px;
      width:100%;
      opacity:1;
    }
  }
}
.search-wrap {
  display: flex;
  display:-webkit-flex;
  align-items:center;
  justify-content:space-between;
  border-width: 1px;
  border-style: solid;
  padding:0 .5rem; 
  
  input {
    background-color:transparent !important;
    border:none !important;
    box-shadow:none !important;
    margin:0;
    padding:0;
    
    &:focus {
      outline:0;
    }
  }
  .search-button {
    background-color:transparent;
    border:none;
    margin:0;
    padding:0; 
    
    &:focus {
      outline:0;
    }
    
    svg {
      height:22px;
      width:22px;
    }
  }
}


.search-wrap {
  border-color:#fff;
  
  input {color:#fff;}
  
  svg {fill:#fff;}
}
header #navigation-bar .navigation nav>ul li.search-nav .search-label span {color:#fff;}



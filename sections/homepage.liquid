{% for block in section.blocks %}
  {% if block.type == 'hero-block' %}
	<div class="fullwidth feature-block-large bg-colour-beige"  style="background-image:url({{ block.settings.hero-block-background-image| img_url: 'master' }});">
		<div class="row">
			<div class="small-12 medium-6 large-6 column">
				<div class="wrap">
					<div class="inner-wrap">
						<h1>{{ block.settings.hero-block-heading }}</h1>
						{{ block.settings.hero-block-copy }}
						<a href="{{ block.settings.hero-block-button-link }}" class="button-black-icon-arrow">{{ block.settings.hero-block-button-copy }}</a>
					</div>
				</div>
			</div>
		</div>
	</div>
	{% elsif block.type == 'copy-3-products-block' %}
		<div class="fullwidth feature-block-copy-3-up bg-colour-grey-light">
			<div class="row" data-equalizer>
				<div class="small-12 medium-12 large-3 columns copy-block" data-equalizer-watch>
					<div class="wrap">
						<div class="inner-wrap">
							<h2>{{ block.settings.copy-3-products-block-heading }}</h2>
							{{ block.settings.copy-3-products-block-copy }}
							<a href="{{ block.settings.copy-3-products-block-copy-button-link }}" class="button-text-icon">{{ block.settings.copy-3-products-block-copy-button-copy }}</a>
						</div>
					</div>
				</div>
				<div class="small-12 medium-12 large-9 columns product-block" data-equalizer-watch>
					<ul class="product-grid medium-block-grid-3 large-block-grid-3">
						{% for i in (1..3) %}

						{% assign key = 'copy-3-products-block-product-' | append : i %}
						
						{% assign product_object = all_products[block.settings[key]] %}
						
						{% include 'product' with product_object %}
						
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>
	{% elsif block.type == 'image-left-copy-right' %}
		<div class="fullwidth feature-block-image-copy bg-colour-white">
			<div class="row" data-equalizer>
				<div class="small-12 large-6 xlarge-8 columns" data-equalizer-watch>
					{{ block.settings.block-image | img_url: 'master' | img_tag }}
				</div>
				<div class="small-12 large-6 xlarge-3 columns" data-equalizer-watch>
					<div class="wrap">
						<div class="inner-wrap">
							{{ "drnks-logo.svg" | asset_url | img_tag }}
							<h2>{{ block.settings.block-heading }}</h2>
							<div class="copy-wrap">
								{{ block.settings.block-copy }}
							</div>
							<a href="{{ block.settings.button-link }}" class="button-text-icon">{{ block.settings.button-copy }}</a>

						</div>
					</div>
				</div>
			</div>
		</div>
	{% elsif block.type == 'image-right-copy-left' %}
		<div class="fullwidth feature-block-image-copy bg-colour-white">
			<div class="row" data-equalizer>
				<div class="small-12 large-6 xlarge-3 columns" data-equalizer-watch>
					<div class="wrap">
						<div class="inner-wrap">
							{{ "drnks-logo.svg" | asset_url | img_tag }}
							<h2>{{ block.settings.block-heading }}</h2>
							<div class="copy-wrap">
								{{ block.settings.block-copy }}
							</div>
							<a href="{{ block.settings.button-link }}" class="button-text-icon">{{ block.settings.button-copy }}</a>

						</div>
					</div>
				</div>
				<div class="small-12 large-6 xlarge-8 columns" data-equalizer-watch>
					{{ block.settings.block-image | img_url: 'master' | img_tag }}
				</div>
			</div>
		</div>
	{% elsif block.type == 'six-up-products' %}
		<div class="fullwidth feature-six-up-products bg-colour-grey">
			<div class="row">
				<div class="small-12 columns product-block">
					<h2>{{ block.settings.block-heading }}</h2>
					<ul class="product-grid medium-block-grid-3 large-block-grid-3 xlarge-block-grid-6">
						{% for i in (1..6) %}

						{% assign key = 'product-' | append : i %}
						
						{% assign product_object = all_products[block.settings[key]] %}
						
						{% include 'product' with product_object %}
						
						{% endfor %}
					</ul>
				</div>				
			</div>
		</div>
	{% elsif block.type == 'img-right-copy-left-title' %}
		<div class="fullwidth feature-block-image-copy bg-colour-grey">
			<div class="row" data-equalizer>
				<div class="small-12 large-6 xlarge-3 columns" data-equalizer-watch>
					<div class="wrap">
						<div class="inner-wrap">
							<p class="feature-copy">PACKS</p>
							<h2>{{ block.settings.block-heading }}</h2>
							<div class="copy-wrap">
								{{ block.settings.block-copy }}
							</div>
							<a href="{{ block.settings.button-link }}" class="button-text-icon">{{ block.settings.button-copy }}</a>

						</div>
					</div>
				</div>
				<div class="small-12 large-6 xlarge-8 columns" data-equalizer-watch>
					{{ block.settings.block-image | img_url: 'master' | img_tag }}
				</div>
			</div>
		</div>

	{% endif %}
{% endfor %}

